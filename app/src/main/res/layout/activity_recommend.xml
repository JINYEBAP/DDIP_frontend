<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecommendActivity">

    <EditText
        android:id="@+id/recommendItem_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/recommend_id_summit"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-16dp"
        android:layout_marginTop="112dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/recommendItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/recommendItem_id"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:text="추천 상품"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/recommend_id_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/recommendItem_id"
        android:layout_alignParentStart="true"
        android:layout_marginStart="53dp"
        android:text="아이디"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Button
        android:id="@+id/recommend_id_summit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="216dp"
        android:text="확인" />

    <TextView
        android:id="@+id/recommend_id_result"
        android:layout_width="370dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="178dp"
        android:text="추천 상품"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
</RelativeLayout>